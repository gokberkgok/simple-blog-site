<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Düzenle</title>
    <link rel="stylesheet" href="/styles.css"> <!-- CSS dosyanızın yolu -->
    <script src="https://cdn.ckeditor.com/ckeditor5/ckeditor.js"></script>
</head>
<body>
    <div class="container">
        <h2>Blog Düzenle</h2>
        <% blogs.forEach(function (blog) { %>
            <form action="/admin/edit/<%= blog.id %>" method="post">
                <div class="form-group">
                    <label for="title">Başlık:</label>
                    <input type="text" id="title" name="title" value="<%= blog.title %>" required>
                </div>
                
                <div class="form-group">
                    <label for="category">Kategori:</label>
                    <input type="text" id="category" name="category" value="<%= blog.category %>" required>
                </div>
                
                <label for="content">İçerik:</label>
                <textarea id="content" name="content" required><%= blog.content %></textarea>
                <div class="form-group">
                    <label for="image_url">Resim URL:</label>
                    <input type="text" id="image_url" name="image_url" value="<%= blog.image_url %>">
                </div>
                
                <button type="submit">Blogu Güncelle</button>
            </form>
       <% }) %>      
    </div>
    
    <script>
        ClassicEditor
            .create(document.querySelector('#content'))
            .catch(error => {
                console.error(error);
            });
    </script>
</body>
</html>
